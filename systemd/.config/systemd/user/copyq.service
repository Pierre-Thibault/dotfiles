[Unit]
Description=CopyQ - Clipboard Manager
Documentation=https://hluk.github.io/CopyQ/
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=forking
# Qt HiDPI scaling
Environment="QT_SCALE_FACTOR=1.25"
# Kill any existing instance first
ExecStartPre=/bin/sh -c 'pkill -x copyq || true'
ExecStart=/etc/profiles/per-user/pierre/bin/copyq --start-server
Restart=on-failure
RestartSec=1
KillMode=mixed
TimeoutStopSec=10

[Install]
WantedBy=graphical-session.target
