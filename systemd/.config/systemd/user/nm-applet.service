[Unit]
Description=NetworkManager Applet
Documentation=man:nm-applet(1)
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
# Kill any existing instance first
ExecStartPre=/bin/sh -c 'pkill -x nm-applet || true'
ExecStart=/run/current-system/sw/bin/nm-applet --indicator
Restart=on-failure
RestartSec=1
KillMode=mixed
TimeoutStopSec=10

[Install]
WantedBy=graphical-session.target
