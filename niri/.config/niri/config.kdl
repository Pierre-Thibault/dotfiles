// Niri configuration file
// Adapted from Hyprland configuration

// Input configuration
input {
    keyboard {
        xkb {
            // Three keyboard layouts matching Hyprland config
            layout "ca,us,latam"
            variant "multix,,"
            options "terminate:ctrl_alt_bksp,compose:sclk,numpad:mac,lv5:rwin_switch_lock"
        }
        repeat-delay 300
        repeat-rate 30
        track-layout "window"
    }

    touchpad {
        dwt
        scroll-method "two-finger"
        accel-speed 0.6
        natural-scroll
        scroll-factor 0.5
    }

    mouse {
        accel-speed 0.3
        left-handed
        middle-emulation
    }
}

output "HDMI-A-1" {
    mode "3840x2160@60"
    scale 1.0
}

hotkey-overlay {
    skip-at-startup
}

// Layout configuration
layout {
    // Gaps around windows
    gaps 5

    // Center focused column
    center-focused-column "on-overflow"

    // Default column width
    default-column-width { proportion 0.5; }

    // Focus ring disabled
    focus-ring {
        off
    }

    // Border with gradient
    border {
        width 5
        active-gradient from="#ff4444" to="#ff9800" angle=45
        inactive-gradient from="#c0c4cc" to="#e8eaed" angle=45
    }

    struts {
      left 5  // Leave some space for the tabs
    }
}

// Window rules
window-rule {
    match app-id="^net\\.waterfox\\.waterfox$"
    default-column-width { proportion 0.5; }
}

window-rule {
    match app-id="^com\\.github\\.hluk\\.copyq$"
    open-floating true
}

window-rule {
    match app-id="^copyq$"
    open-floating true
}

// Animations
animations {
    slowdown 1.0

    horizontal-view-movement {
        duration-ms 200
        curve "ease-out-cubic"
    }

    window-open {
        duration-ms 150
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 150
        curve "ease-out-expo"
    }

    window-movement {
        duration-ms 200
        curve "ease-out-cubic"
    }
}

// Spawn commands at startup
spawn-at-startup "sh" "-c" "pkill waybar; sleep 1; waybar"
spawn-at-startup "swaybg" "-i" "/home/pierre/Images/Fonds d'écran/default.jpg" "-m" "fill"
spawn-at-startup "~/.config/waybar/start-swayidle.sh"
spawn-at-startup "~/.config/waybar/video-idle-manager.sh"
spawn-at-startup "swaync"
spawn-at-startup "nm-applet" "--indicator"
spawn-at-startup "blueman-applet"
spawn-at-startup "sh" "-c" "copyq --start-server"
spawn-at-startup "~/nixos-config/bin/theme-auto-switch-daemon.sh"

// Keybindings
binds {
    // Modifier key
    Mod+Shift+Slash { spawn "niri" "msg" "action" "show-hotkey-overlay"; }

    // Application shortcuts (matching Gnome/Hyprland)
    Mod+D hotkey-overlay-title="Lanceur d'applications" { spawn "fuzzel"; }
    Ctrl+Space hotkey-overlay-title="Lanceur d'applications" { spawn "fuzzel"; }
    Ctrl+Shift+Space hotkey-overlay-title="Sélecteur de fenêtres de l'application courante" { spawn "~/nixos-config/bin/select_app_window_niri"; }
    Mod+Space { spawn "niri" "msg" "action" "switch-layout" "next"; }
    Ctrl+Alt+Mod+V hotkey-overlay-title="Gestionnaire de presse-papier" { spawn "sh" "-c" "copyq --start-server show"; }
    Mod+E hotkey-overlay-title="Sélecteur d'émojis" { spawn "wofi-emoji"; }
    Mod+C hotkey-overlay-title="Pipette à couleurs" { spawn "hyprpicker" "-a"; }
    Mod+N hotkey-overlay-title="Centre de notifications" { spawn "swaync-client" "-t"; }
    Mod+Menu hotkey-overlay-title="Caractères spéciaux" { spawn "gnome-characters"; }

    // Custom scripts
    Shift+Mod+N hotkey-overlay-title="Afficher les notes" { spawn "~/nixos-config/bin/show_notes_niri"; }
    Shift+Mod+M hotkey-overlay-title="Afficher les mots de passe" { spawn "~/nixos-config/bin/show_passwords"; }
    Alt+Mod+P hotkey-overlay-title="Afficher les courriels" { spawn "~/nixos-config/bin/show_emails_niri"; }
    Alt+Mod+X hotkey-overlay-title="Afficher X" { spawn "~/nixos-config/bin/show_x_niri"; }
    Alt+Mod+D hotkey-overlay-title="Dictionnaire" { spawn "~/nixos-config/bin/show_dictionary_niri"; }
    Alt+Mod+G hotkey-overlay-title="Recherche Grok" { spawn "~/nixos-config/bin/show_grok_niri"; }
    Shift+Alt+Mod+P hotkey-overlay-title="Taper courriel personnel" { spawn "~/nixos-config/secrets/bin/type_personal_email"; }
    Shift+Alt+Mod+D hotkey-overlay-title="Taper courriel professionnel" { spawn "~/nixos-config/secrets/bin/type_professional_email"; }
    Shift+Alt+Mod+T hotkey-overlay-title="Taper numéro de téléphone" { spawn "~/nixos-config/secrets/bin/type_phone"; }
    Shift+Alt+Mod+C hotkey-overlay-title="Taper code postal" { spawn "~/nixos-config/secrets/bin/type_postal_code"; }
    Shift+Alt+Mod+F hotkey-overlay-title="Nouvelle fenêtre Waterfox" { spawn "flatpak" "run" "net.waterfox.waterfox" "--new-window"; }
    Ctrl+Alt+Mod+D hotkey-overlay-title="Taper la date" { spawn "~/nixos-config/bin/type_date"; }
    Ctrl+Alt+Mod+T hotkey-overlay-title="Taper l'heure" { spawn "~/nixos-config/bin/type_time"; }

    // Run or raise shortcuts
    Alt+Mod+F hotkey-overlay-title="Basculer vers Waterfox" { spawn "~/nixos-config/bin/run_or_raise_niri" "waterfox" "flatpak run net.waterfox.waterfox"; }
    Alt+Mod+A hotkey-overlay-title="Basculer vers terminal" { spawn "~/nixos-config/bin/run_or_raise_niri" "ghostty" "ghostty"; }
    Alt+Mod+O hotkey-overlay-title="Basculer vers Obsidian" { spawn "~/nixos-config/bin/run_or_raise_niri" "obsidian" "obsidian"; }
    Alt+Mod+V hotkey-overlay-title="Basculer vers VSCodium" { spawn "~/nixos-config/bin/run_or_raise_niri" "codium" "codium"; }
    Alt+Mod+Z hotkey-overlay-title="Basculer vers Nautilus" { spawn "~/nixos-config/bin/run_or_raise_niri" "nautilus" "nautilus"; }

    // System actions
    Mod+Escape hotkey-overlay-title="Menu de fermeture de session" { spawn "wlogout" "--layout" "/home/pierre/.config/wlogout/layout" "--css" "/home/pierre/.config/wlogout/style.css" "--buttons-per-row" "1" "--column-spacing" "0" "--row-spacing" "0" "--margin-right" "20"; }

    // Window management
    Mod+W { close-window; }
    Mod+F { fullscreen-window; }
    Mod+Shift+F { maximize-column; }
    Mod+Z { maximize-column; }
    Mod+X { center-column; }
    Mod+Shift+V { toggle-window-floating; }

    // Move focus with arrow keys
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }

    // Move focus with mouse
    Mod+WheelScrollRight                { focus-column-right; }
    Mod+WheelScrollLeft                 { focus-column-left; }
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp   cooldown-ms=150 { focus-workspace-up; }

    // Jump to first/last column
    Mod+Home { focus-column-first; }
    Mod+End { focus-column-last; }

    // Move windows with arrow keys
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up { move-window-up; }
    Mod+Shift+Down { move-window-down; }

    // Navigate through windows/columns
    Mod+Tab { focus-window-down-or-column-right; }
    Mod+Shift+Tab { focus-window-up-or-column-left; }
    Alt+Tab { focus-column-right; }
    Alt+Shift+Tab { focus-column-left; }

    // Consume or expel window from column (stacking windows)
    Mod+Comma { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }
    Mod+K { consume-or-expel-window-left; }
    Mod+L { consume-or-expel-window-right; }

    Mod+T { toggle-column-tabbed-display; }

    Mod+O { toggle-overview; }

    // Workspace navigation
    Mod+Ctrl+Down { focus-workspace-down; }
    Mod+Ctrl+Up { focus-workspace-up; }
    Mod+Ctrl+Right { focus-workspace-down; }
    Mod+Ctrl+Left { focus-workspace-up; }
    Mod+A { focus-workspace-previous; }

    // Move column to workspace
    Mod+Page_Up { move-column-to-workspace-up; }
    Mod+Page_Down { move-column-to-workspace-down; }

    // Direct workspace access
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    // Resize
    Mod+R { switch-preset-column-width; }
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }
    Mod+V { set-window-height "100%"; }

    // Screenshots (copy to clipboard)
    Print hotkey-overlay-title="Capture de région" { spawn "sh" "-c" "grim -g \"$(slurp)\" - | wl-copy"; }
    Shift+Print hotkey-overlay-title="Capture d'écran complète" { spawn "sh" "-c" "grim - | wl-copy"; }

    // Screenshot with editor (for annotation)
    Ctrl+Print hotkey-overlay-title="Capture de région (éditeur)" { spawn "sh" "-c" "grim -g \"$(slurp)\" - | swappy -f -"; }
    Ctrl+Shift+Print hotkey-overlay-title="Capture complète (éditeur)" { spawn "sh" "-c" "grim - | swappy -f -"; }

    // OCR (text recognition from screen)
    Shift+Mod+T hotkey-overlay-title="Reconnaissance de texte (OCR)" { spawn "~/nixos-config/bin/ocr-screenshot.sh"; }

    // Media keys
    XF86AudioMute hotkey-overlay-title="Son sourdine/normal" allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute hotkey-overlay-title="Microphone sourdine/normal" allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
    XF86AudioRaiseVolume hotkey-overlay-title="Augmenter le volume" allow-when-locked=true { spawn "wpctl" "set-volume" "--limit" "1.0" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioLowerVolume hotkey-overlay-title="Diminuer le volume" allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86MonBrightnessUp hotkey-overlay-title="Augmenter la luminosité" allow-when-locked=true { spawn "brightnessctl" "set" "+5%"; }
    XF86MonBrightnessDown hotkey-overlay-title="Diminuer la luminosité" allow-when-locked=true { spawn "brightnessctl" "set" "5%-"; }
}

// Prefer no server-side decorations (no title bars)
prefer-no-csd

// Cursor configuration
cursor {
    xcursor-theme "Adwaita"
    xcursor-size 32
    hide-when-typing
    hide-after-inactive-ms 10000
}

// Environment variables
environment {
    XCURSOR_THEME "Adwaita"
    XCURSOR_SIZE "32"
    QT_QPA_PLATFORMTHEME "qt5ct"
    QT_SCALE_FACTOR "1.25"
    QT_AUTO_SCREEN_SCALE_FACTOR "0"
    GTK_IM_MODULE "simple"  // Fixing dead key issue?
    QT_IM_MODULE ""  // Disable IBus for Qt applications
    XMODIFIERS ""  // Disable IBus system-wide
}
