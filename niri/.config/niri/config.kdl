// Niri configuration file
// Adapted from Hyprland configuration

// Input configuration
input {
    keyboard {
        xkb {
            // Three keyboard layouts matching Hyprland config
            layout "ca,us,latam"
            variant "multix,,"
            options "terminate:ctrl_alt_bksp,compose:sclk,numpad:mac,lv5:rwin_switch_lock"
        }
        repeat-delay 300
        repeat-rate 30
    }

    touchpad {
        tap
        dwt
        scroll-method "two-finger"
        accel-speed 0.0
    }

    mouse {
        accel-speed 0.0
        left-handed
    }
}

output "HDMI-A-1" {
    mode "3840x2160@60"
    scale 1.0
}

// Layout configuration
layout {
    // Gaps around windows
    gaps 5

    // Center focused column
    center-focused-column "on-overflow"

    // Default column width
    default-column-width { proportion 0.5; }

    // Focus ring disabled
    focus-ring {
        off
    }

    // Border with gradient
    border {
        width 5
        active-gradient from="#ff4444" to="#ff9800" angle=45
        inactive-gradient from="#c0c4cc" to="#e8eaed" angle=45
    }
}

// Window rules
window-rule {
    match app-id="^net\\.waterfox\\.waterfox$"
    default-column-width { proportion 0.5; }
}

// Animations
animations {
    slowdown 1.0

    horizontal-view-movement {
        duration-ms 200
        curve "ease-out-cubic"
    }

    window-open {
        duration-ms 150
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 150
        curve "ease-out-expo"
    }

    window-movement {
        duration-ms 200
        curve "ease-out-cubic"
    }
}

// Spawn commands at startup
spawn-at-startup "sh" "-c" "killall waybar; waybar"
spawn-at-startup "swaybg" "-i" "/home/pierre/Images/Fonds d'Ã©cran/default.jpg" "-m" "fill"
spawn-at-startup "sh" "-c" "swayidle -w timeout 300 'swaylock -f' timeout 600 'systemctl suspend' before-sleep 'swaylock -f' after-resume '~/bin/resume-actions.sh'"
spawn-at-startup "swaync"
spawn-at-startup "nm-applet" "--indicator"
spawn-at-startup "blueman-applet"
spawn-at-startup "sh" "-c" "QT_SCALE_FACTOR=1.5 copyq --start-server"
spawn-at-startup "~/bin/theme-auto-switch-daemon.sh"

// Keybindings
binds {
    // Modifier key
    Mod+Shift+Slash { spawn "niri" "msg" "action" "show-hotkey-overlay"; }

    // Application shortcuts (matching Gnome/Hyprland)
    Mod+D { spawn "fuzzel"; }
    Ctrl+Space { spawn "fuzzel"; }
    Mod+Space { spawn "niri" "msg" "action" "switch-layout" "next"; }
    Ctrl+Alt+Mod+V { spawn "sh" "-c" "QT_SCALE_FACTOR=1.5 copyq --start-server show"; }
    Mod+E { spawn "wofi-emoji"; }
    Mod+C { spawn "hyprpicker" "-a"; }
    Mod+N { spawn "swaync-client" "-t"; }
    Mod+Menu { spawn "gnome-characters"; }

    // Custom scripts
    Shift+Mod+N { spawn "~/nixos-config/bin/show_notes_niri"; }
    Shift+Mod+M { spawn "~/nixos-config/bin/show_passwords"; }
    Alt+Mod+P { spawn "~/nixos-config/bin/show_emails_niri"; }
    Alt+Mod+X { spawn "~/nixos-config/bin/show_x_niri"; }
    Alt+Mod+D { spawn "~/nixos-config/bin/show_dictionary_niri"; }
    Alt+Mod+G { spawn "~/nixos-config/bin/show_grok_niri"; }
    Shift+Alt+Mod+P { spawn "~/nixos-config/secrets/bin/type_personal_email"; }
    Shift+Alt+Mod+D { spawn "~/nixos-config/secrets/bin/type_professional_email"; }
    Shift+Alt+Mod+T { spawn "~/nixos-config/secrets/bin/type_phone"; }
    Shift+Alt+Mod+C { spawn "~/nixos-config/secrets/bin/type_postal_code"; }
    Shift+Alt+Mod+F { spawn "flatpak" "run" "net.waterfox.waterfox" "--new-window"; }
    Ctrl+Alt+Mod+D { spawn "~/nixos-config/bin/type_date"; }
    Ctrl+Alt+Mod+T { spawn "~/nixos-config/bin/type_time"; }

    // Run or raise shortcuts
    Alt+Mod+F { spawn "~/nixos-config/bin/run_or_raise_niri" "waterfox" "flatpak run net.waterfox.waterfox"; }
    Alt+Mod+A { spawn "~/nixos-config/bin/run_or_raise_niri" "ghostty" "ghostty"; }
    Alt+Mod+O { spawn "~/nixos-config/bin/run_or_raise_niri" "obsidian" "obsidian"; }
    Alt+Mod+V { spawn "~/nixos-config/bin/run_or_raise_niri" "codium" "codium"; }
    Alt+Mod+Z { spawn "~/nixos-config/bin/run_or_raise_niri" "nautilus" "nautilus"; }

    // System actions
    Mod+Escape { spawn "wlogout" "--layout" "/home/pierre/.config/wlogout/layout" "--css" "/home/pierre/.config/wlogout/style.css" "--buttons-per-row" "1" "--column-spacing" "0" "--row-spacing" "0" "--margin-right" "20"; }

    // Window management
    Mod+W { close-window; }
    Mod+F { fullscreen-window; }
    Mod+Shift+F { maximize-column; }
    Mod+Z { maximize-column; }
    Mod+X { center-column; }
    Mod+V { toggle-window-floating; }

    // Move focus with arrow keys
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }

    // Move focus with vim keys
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+K { focus-window-up; }
    Mod+J { focus-window-down; }

    // Move windows with arrow keys
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up { move-window-up; }
    Mod+Shift+Down { move-window-down; }

    // Move windows with vim keys
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+K { move-window-up; }
    Mod+Shift+J { move-window-down; }

    // Navigate through windows/columns
    Mod+Tab { focus-window-down-or-column-right; }
    Mod+Shift+Tab { focus-window-up-or-column-left; }
    Alt+Tab { focus-column-right; }
    Alt+Shift+Tab { focus-column-left; }

    // Consume or expel window from column (stacking windows)
    Mod+Comma { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    Mod+O { toggle-overview; }

    // Workspace navigation
    Mod+Ctrl+Down { focus-workspace-down; }
    Mod+Ctrl+Up { focus-workspace-up; }
    Mod+Ctrl+Right { focus-workspace-down; }
    Mod+Ctrl+Left { focus-workspace-up; }
    Mod+A { focus-workspace-previous; }

    // Direct workspace access
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    // Resize
    Mod+R { switch-preset-column-width; }
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Screenshots (copy to clipboard)
    Print { spawn "sh" "-c" "grim -g \"$(slurp)\" - | wl-copy"; }
    Shift+Print { spawn "sh" "-c" "grim - | wl-copy"; }

    // Screenshot with editor (for annotation)
    Ctrl+Print { spawn "sh" "-c" "grim -g \"$(slurp)\" - | swappy -f -"; }
    Ctrl+Shift+Print { spawn "sh" "-c" "grim - | swappy -f -"; }

    // OCR (text recognition from screen)
    Shift+Mod+T { spawn "~/bin/ocr-screenshot.sh"; }

    // Media keys
    XF86AudioMute { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
    XF86AudioRaiseVolume { spawn "wpctl" "set-volume" "--limit" "1.0" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioLowerVolume { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86MonBrightnessUp { spawn "brightnessctl" "set" "+5%"; }
    XF86MonBrightnessDown { spawn "brightnessctl" "set" "5%-"; }
}

// Prefer no server-side decorations (no title bars)
prefer-no-csd

// Cursor configuration
cursor {
    xcursor-theme "Adwaita"
    xcursor-size 32
}

// Environment variables
environment {
    XCURSOR_THEME "Adwaita"
    XCURSOR_SIZE "32"
    QT_QPA_PLATFORMTHEME "qt5ct"
    QT_SCALE_FACTOR "1.5"
    QT_AUTO_SCREEN_SCALE_FACTOR "1"
    GTK_IM_MODULE "simple"  // Fixing dead key issue?
    QT_IM_MODULE ""  // Disable IBus for Qt applications
    XMODIFIERS ""  // Disable IBus system-wide
}
